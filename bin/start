#!/usr/bin/env node
var debug = require('debug')('kek');
var app = require('../app');

if (process.env.PORT)
  app.set('port', process.env.PORT);
else if (process.env.NODE_ENV === "production") {
  app.set('port', 3000);
}
else {
  app.set("port", 3001);
}

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});