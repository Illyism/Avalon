#!/usr/bin/env node
var forever = require("forever");

if (process.env.NODE_ENV === "production") {
  forever.load({
    root: "/www/logs/illy.avalon-rpg.com"
  })
}
else {
  forever.load({
    root: "/www/logs/illy.avalon-rpg.com/debug",
    debug: true
  })
}

mon = forever.startDaemon(__dirname + "/start", {
  env: {"PORT": process.env.PORT, "NODE_ENV": process.env.NODE_ENV}
})

forever.startServer(mon);