extends ../layout

block head
  - var title = meta.seo.title
  - var description = meta.seo.description
  - var keywords = meta.seo.keywords

block content
  .ui.content
    .contain
      h2.ui.title.center.underline #{meta.title}
      if meta.subtitle
        h4.sub.title.center.ui #{meta.subtitle}
      if meta.summary
        p #{meta.summary}
      .section.ancienthistory.ui.box
        .ui.grid.responsive.two.columns
          for link in meta.links
            .column
              h4.ui.title: a(href=link.url) #{link.title}
              | #{link.description}