extends ../layout

block head
  - var title = page.description + " - Avalon - multiplayer game world - Help and manual section"
  - var description = false
  link(rel="canonical", href="http://www.avalon-rpg.com/help/pages/" + page.title.toLowerCase())
block content
  .ui.content
    .contain
      .bread
        a(href="/help/") Help
        |  &gt; 
        a(href="/help/sections/" + page.section) Section #{page.section}
        |  &gt; 
        b #{page.id} #{page.title}

      h1.ui.title.center #{page.description}
      .text.help !{page.html}
      center: a(href="/help/sections/" + page.section) Back to Section Index